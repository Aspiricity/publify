xm.entry do
  xm.author { xm.name item.author }
  xm.id "tag:www.matijs.net,#{item.created_at.strftime("%Y")}:id_#{item.id}"

  xm.issued item.created_at.xmlschema
  xm.modified item.updated_at.xmlschema
  xm.title "Comment on #{item.article.title} by #{item.author}"

  xm.link "rel" => "alternate", "type" => "text/html", "href" => comment_link(item)

  content = comment_html(item)
  xm.content content, "type"=>"text/html", "mode"=>"escaped"
end
